<%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>

  <body>
    <%- include('../partials/nav.ejs') %>

    <main>
      <% if (errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
      <% } %>

      <form
        class="product-form"
        action="/admin/<%= editMode ? 'edit-product' : 'add-product' %>"
        method="POST"
        enctype="multipart/form-data">
        <!-- TITLE -->
        <div class="form-control">
          <label for="title">Title</label>
          <input
            type="text"
            name="title"
            id="title"
            value="<%= editMode ? product.title : oldInputs.title %>"
            autofocus />
        </div>
        <!-- IMAGE UPLOAD -->
        <div class="form-control">
          <label for="image">Image</label>
          <input
            type="file"
            name="image"
            id="image" />
        </div>
        <!-- IMAGE URL -->
        <!-- <div class="form-control">
          <label for="imageUrl">Image URL</label>
          <input
            type="text"
            name="imageUrl"
            id="imageUrl"
            value="<%= editMode ? product.imageUrl : oldInputs.imageUrl %>" />
        </div> -->
        <!-- PRICE -->
        <div class="form-control">
          <label for="price">Price</label>
          <input
            type="number"
            name="price"
            id="price"
            step="0.01"
            value="<%= editMode ? parseFloat(product.price).toFixed(2) : oldInputs.price %>" />
        </div>
        <!-- DESCRIPTION -->
        <div class="form-control">
          <label for="description">Description</label>
          <textarea
            name="description"
            id="description"
            rows="5"><%= editMode ? product.description : oldInputs.description %></textarea>
        </div>
        <!-- ID -- only used for editing -->
        <% if (editMode) { %>
        <input type="hidden" name="id" value="<%= product._id %>">
        <% } %>

        <!-- SUBMIT BUTTON -->
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="btn" type="submit">
          <%= editMode ? 'Update Product' : 'Add Product' %>
        </button>
      </form>
    </main>

<%- include('../partials/end.ejs') %>
